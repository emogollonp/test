{
    "name": "mesa247-tech-test",
    "version": "1.0.0",
    "private": true,
    "description": "Senior Frontend Technical Test - Mesa247 Marketplace B2C",
    "scripts": {
        "web": "pnpm --filter web dev",
        "mobile": "pnpm --filter mobile start",
        "web:build": "pnpm --filter web build",
        "mobile:build": "pnpm --filter mobile build",
        "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
        "lint:fix": "eslint . --ext .ts,.tsx --fix",
        "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
        "type-check": "pnpm --filter web type-check && pnpm --filter mobile type-check",
        "clean": "pnpm --filter web clean && pnpm --filter mobile clean"
    },
    "keywords": [
        "react",
        "react-native",
        "expo",
        "vite",
        "typescript",
        "marketplace"
    ],
    "author": "Mesa247",
    "license": "MIT",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^7.1.0",
        "@typescript-eslint/parser": "^7.1.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.34.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "prettier": "^3.2.5"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    }
}
